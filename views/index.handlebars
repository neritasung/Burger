<div class="container">
    <img src="../assets/img/burger.jpg">
    <h1>
        <span class="fas fa-utensils"></span> Welcome to the Burger Joint's kitchen!</h1>
    <br>
    <h3>Staff, please enter customer's order below, their order will be ready in 15 to 20 minutes!</h3>
    <hr>
    <form action="/burgers/create" method="POST">
        <div class="form-group">
            <label for="formGroupExampleInput">Enter customer's order here</label>
            <input name="burger_name" type="text" class="form-control" id="formGroupExampleInput" placeholder="Customers order">
            <br>
            <button class="btn btn-danger btn-lg">
                <span class="fas fa-check-square"></span> Submit Order</button>
        </div>
    </form>

    {{!-- burger list to kitchen --}}
    <div class="row" id = "order">
        <div class="col-md-4 col-md-offset-1">
            <div class="panel-panel default">
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless delivered}}
                    <li class="list-group-item">
                        <div class="input-group">
                            <p class="lead"> {{burger_name}} </p>
                            <span class="input-group-btn">
                                {{!-- <form action="burgers/update/{{id}}?_method=PUT" method="POST"> --}}
                                    <input type="hidden" name="delivered" value="true">
                                    {{!-- <button class="btn btn-default btn-lg" type="submit"> Ready to deliver to customer! </button> --}}
                                {{!-- </form> --}}
                            <button class="btn btn-default btn-lg" data-id={{id}} data-status={{delivered}}>Ready to deliver to customer!</button>    
                            </span>
                        </div>
                    </li>
                    {{/unless}} 
                    {{/each}}
                </ul>
            </div>
        </div>


        {{!-- burger list after being delivered --}}
        <div class="row" id = "deliver">
            <div class="col-md-4 col-md-offset-1">
                <div class="panel panel-default">
                    <ul class="list-group">
                        {{#each burgers}} {{#if this.delivered}}
                        <li class="list-group-item">
                            <p class="lead">{{this.burger_name}} </p>
                        </li>
                        {{/if}} 
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
 </div>   